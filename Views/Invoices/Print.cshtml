@model LabAssist_V_3._0.Models.ViewModels.InvoicePrint
@using LabAssist_V_3._0.Models;
@{ Layout = null; }

<!--second printing view-->

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Invoice Print</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap 4 -->
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/admin-lte/plugins/fontawesome-free/css/fontawesome.min.css">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin-lte/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/admin-lte/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body>
    <div class="wrapper">
        <!-- Main content -->
        <section class="invoice">
            <!-- title row -->
            <div class="row">
                <div class="col-12">
                    <h2 class="page-header">
                        <i class="fas fa-file-invoice"></i> Lab Assist.
                        <!--small class="float-right">Date: 2/10/2014</!--small-->
                    </h2>
                </div>
                <!-- /.col -->
            </div>
            <!-- info row -->
            <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                    From:
                    <address>
                        <strong>Admin, </strong><br>
                        303, Highlevel Road<br>
                        Homagama, 10402<br>
                        Sri lanka<br>
                        Phone: 011 125 1257<br>
                        Email: labassist.com
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    To:
                    <address>
                        <input style="border: 0px solid;" asp-for="Customer.CustomerName" readonly type="text" /><br />

                        <input style="border: 0px solid;" asp-for="Customer.ContactNumber" readonly type="text" /><br />

                        <input style="border: 0px solid;" asp-for="Customer.Address" readonly type="text" /><br />

                        <input style="border: 0px solid;" asp-for="Customer.EmailAddress" readonly type="text" /><br />
                    </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                    @foreach (var line in Model.Payment)
                    {
                        <div>
                            <h6 class="my-0">Invoice Id : @line.InvoiceID</h6>
                            <h6 class="my-0">Payment Id : @line.PaymentID</h6>
                            <h6 class="my-0">Payment Method : @line.PaymentMethod</h6>
                            <h6 class="my-0">Payment Type : @line.PaymentType</h6>
                            <h6 class="my-0">Payment Amount : @line.PaymentAmount</h6>
                            <h6 class="my-0">Invoice Date : @line.Invoice.InvoiceData</h6>
                            <br />
                        </div>
                    }
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <!-- Table row -->
            <br />
            <div class="row">
                <div class="col-12 table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Item Id</th>
                                <th>Item Name</th>
                                <th>Item Catergory</th>
                                <th>UoM</th>
                                <th>Item Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Item)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemCatergory)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UOM)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ItemPrice)
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <div class="row">
                <!-- accepted payments column -->
                <div class="col-6">
                    <p class="lead">Payment Policy:</p>
                    

                    <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                        labAssist Payment policy applied
                    </p>
                </div>
                <!-- /.col -->
                <div class="col-6">
                    <p class="lead">Payment Details</p>
                    <div class="table-responsive">
                        <table class="table">
                        
                            @foreach (var item in Model.Payment)
                            {
                        <tr>
                            <th style="width:50%">Total amount:</th>
                            <td>
                                @Html.DisplayFor(modelItem => item.Invoice.InvoiceTotal)
                            </td>
                        </tr>}
                        </table>
                    </div>
                </div>
            </div>


</section>
    </div>
    <!-- Bootstrap 4 -->
    <script src="~/admin-lte/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript">window.addEventListener("load", window.print());</script>
</body>
</html>

