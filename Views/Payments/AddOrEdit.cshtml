@model LabAssist_V_3._0.Data.Payment

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="col-md">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Payment</h3>
            </div>
            <form asp-action="AddOrEdit" asp-route-id="@Model.PaymentID" role="form" onsubmit="return jQueryAjaxPost(this);">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PaymentID" />
                    <div class="form-group">
                        <label asp-for="PreparedBy" class="control-label"></label>
                        <input asp-for="PreparedBy" class="form-control" />
                        <span asp-validation-for="PreparedBy" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="amount" class="control-label"></label>
                        <input asp-for="amount" class="form-control" />
                        <span asp-validation-for="amount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaymentMethod" class="control-label"></label>
                        <select asp-for="PaymentMethod" asp-items="Html.GetEnumSelectList<LabAssist_V_3._0.Models.Enums.PaymentMethod>()" class="form-control">
                            <option selected="selected" value="">Please select</option>
                        </select>
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaymentType" class="control-label"></label>
                        <select asp-for="PaymentType" asp-items="Html.GetEnumSelectList<LabAssist_V_3._0.Models.Enums.PaymentType>()" class="form-control">
                            <option selected="selected" value="">Please select</option>
                        </select>
                        <span asp-validation-for="PaymentType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
            </form>
        </div>
    </div>
